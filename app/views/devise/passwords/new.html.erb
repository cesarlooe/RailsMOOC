<div class="row">
  <div class="col m6 offset-m3 center">

    <h5>Forgot your password?</h5>
    
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render partial: "shared/devisemes" %>

      <div class="input-field">
        <%= f.email_field :email, :id => "email", :class => "validate", :placeholder => "Email", autofocus: true %>
      </div>

      <%= f.submit "Send me reset password instructions", :class => "waves-effect waves-light btn indigo darken-2" %>
    <% end %>

  </div>
</div>
